<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_activity_intro"
    tools:context="com.example.prn763.bluetoothproject.MainActivity"
    android:background="@drawable/androidbg">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="bottom">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:text="Bluetooth Agency"
                android:textStyle="bold|italic"
                android:textAlignment="center"
                android:textColor="#D6DADB"
                android:id="@+id/intermediate"
                android:background="@drawable/customerbtn"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:text="Bluetooth Receiver"
                android:textStyle="bold|italic"
                android:textAlignment="center"
                android:id="@+id/receiver"
                android:background="@drawable/customerbtn"
                android:textColor="#D6DADB"
                android:fadingEdge="horizontal"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bluetooth Speed Service"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_weight="0.10"
            android:textColor="#D6DADB"
            android:textStyle="bold|italic"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView2"
            android:background="@drawable/thunder"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="200dp"/>

    </LinearLayout>


</RelativeLayout>
